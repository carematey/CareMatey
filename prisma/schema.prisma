// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  fullName   String
  email      String    @unique
  password   String
  phone      String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime?
  archivedAt DateTime?
  deletedAt  DateTime?
  homes      Home[]
  cards      Card[]

  @@map(name: "user")
}

model Home {
  id      Int     @id @default(autoincrement())
  owner   User    @relation(fields: [ownerId], references: [id])
  ownerId Int
  name    String?

  createdAt  DateTime  @default(now())
  updatedAt  DateTime?
  archivedAt DateTime?
  deletedAt  DateTime?
  cards      Card[]

  @@map(name: "home")
}

model Card {
  id         Int       @id @default(autoincrement())
  home       Home      @relation(fields: [homeId], references: [id])
  homeId     Int
  title      String
  text       String
  tags       String[]
  owner      User      @relation(fields: [ownerId], references: [id])
  ownerId    Int
  creatorId  Int
  createdAt  DateTime  @default(now())
  updatedAt  DateTime?
  archivedAt DateTime?
  deletedAt  DateTime?

  @@index([tags, creatorId])
  @@map(name: "card")
}
