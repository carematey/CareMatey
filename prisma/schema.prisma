// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pets {
  id       Int       @id @default(autoincrement())
  name     String?
  sections Section[]
}

model Section {
  id      Int     @id @default(autoincrement())
  title   String?
  content String?
  petsId  Int?
  Pets    Pets?   @relation(fields: [petsId], references: [id])
}
